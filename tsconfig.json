{
  "compilerOptions": {
    "lib": ["DOM", "ESNext"],
    "noImplicitAny": true,
    "noUnusedParameters": true,
    "sourceMap": true,
    "target": "es2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "declaration": true,
    "inlineSources": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noUnusedLocals": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
  },
  "exclude": ["node_modules"],
  "include": ["src"]
}
